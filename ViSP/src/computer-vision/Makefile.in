

SRC_REP = \
	\
	pose-estimation \
	homography-estimation


all install uninstall:
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""


clean:
	rm -f *~
	rm -f *%
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""

