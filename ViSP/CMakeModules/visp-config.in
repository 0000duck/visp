PREFIX="${VISP_CONFIG_SCRIPT_PREFIX}"

CFLAGS="${VISP_CONFIG_SCRIPT_CFLAGS}"

LIBS="${VISP_CONFIG_SCRIPT_EXTERN_LIBS}"

VERSION="${VISP_CONFIG_SCRIPT_VERSION}"

usage()
{
    cat <<EOF
Usage: $0 [--prefix] [--cflags] [--libs] [--version] [--help]

  --prefix    Show ViSP-2 installation prefix.
  --cflags    Print pre-processor and compiler flags including
              third party includes we depend on.
  --libs      Print library linking information with ViSP-2
              including third party libraries we depend on.
  --version   Output ViSP-2 version information.
  --help      Display this help and exit.

EOF
    exit $1
}

if ! test "$1"; then
    usage;
    exit -1;
fi;

for arg in $@; do
    case $arg in
	--prefix) echo -n " $PREFIX";;
	--cflags) echo -n " $CFLAGS";;
	--libs) echo -n " $LIBS";;
	--version) echo -n " $VERSION";;
	*) usage; exit -1 ;;
    esac;
done;
echo -e "\n"
