

SRC_REP = \
	\
	disk \
	generic-framegrabber \
	IC-Comp \
	1394 \
	v4l2 \
	OSX-cfox


all install uninstall:
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""


clean:
	rm -f *~
	rm -f *%
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""

