

SRC_REP = \
	general-tracking-issues \
	\
	dots \
	moving-edges \
	forward-projection \
	feature-builder \
	model-based-tracking


all install uninstall:
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""


clean:
	rm -f *~
	rm -f *%
	@for i in $(SRC_REP);\
	do \
		if [ -d $$i ] ;\
		then \
			echo "*" ; \
			echo "* cd $$i ; $(MAKE) $@" ; \
			echo "*" ; \
			( cd $$i; $(MAKE) $@ ) ;\
			echo "" ; \
			continue; \
		fi ;\
		echo "Must be in a directory." ;\
	done
	@echo ""

