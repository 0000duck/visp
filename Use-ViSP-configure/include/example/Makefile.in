EXAMPLE	=  \
	exExample.h

# The list of your headers
HEADERS	  = $(EXAMPLE)

SUFFIXES := .h

all install: $(HEADERS)

uninstall:
	rm -f $(HEADERS)

clean:
	rm -f *~ *%

#include files
%.h: ;	ln -s `find ../../src -name $@|grep -v CVS` $@

#template files
%.t.cpp: ;	ln -s `find ../../src -name $@|grep -v CVS` $@
