    // these constants are wrapped inside functions to prevent inlining
    private static String getVersion() { return "@VISP_VERSION@"; }
    private static String getNativeLibraryName() { return "visp_java@VISP_VERSION_MAJOR@@VISP_VERSION_MINOR@@VISP_VERSION_PATCH@"; }
    private static int getVersionMajorJ() { return @VISP_VERSION_MAJOR@; }
    private static int getVersionMinorJ() { return @VISP_VERSION_MINOR@; }
    private static int getVersionRevisionJ() { return @VISP_VERSION_PATCH@; }
    private static String getVersionStatusJ() { return "@VISP_VERSION_STATUS@"; }

    public static final String VERSION = getVersion();
    public static final String NATIVE_LIBRARY_NAME = getNativeLibraryName();
    public static final int VERSION_MAJOR = getVersionMajorJ();
    public static final int VERSION_MINOR = getVersionMinorJ();
    public static final int VERSION_REVISION = getVersionRevisionJ();
    public static final String VERSION_STATUS = getVersionStatusJ();
